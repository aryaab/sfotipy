@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
burdeo = #BD255B
a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0
img 
	vertical-align top	
.action
	color white
	font-size 1.2em
	margin-right .5em
	&last-child
		margin 0
	&.gray
		color gris_claro
				
.actions
	background rgba(black,.3)
	bottom 0	
	position absolute
	left 0
	right 0
			
.border-bottom
	border-bottom 2px solid gris_claro

.button-menu
	color red
	left .5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto
	
.center-text
	text-align center

.container
	font-size 0 
	padding 1.4rem
	text-align center

.header
	height 3.5em
		
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
		
.name
	color gris_oscuro

.author 
	color gris_claro
	
.menu 
	display none

.padding
	padding 1em
	
.padding-tb
	padding 1em 0
	

.playing
	color green
	&.small
		width 20em
	
.progreso
	margin 1em 0
	position relative
	.min 
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0	
	.total
		background gris_claro
		border-radius 5%
		color purple
		height 5px
		margin 0 auto
		width 75%
		
		
	.state	
		background burdeo
		border-radius 5%
		color green
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%
		color black	
		height 10px
		position absolute
		right 0
		top -2px
		width 10px

